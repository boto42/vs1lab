<!DOCTYPE html>
<html lang="en">

	<head>
		<meta charset="UTF-8">
		<meta name="viewport" content="width=device-width, initial-scale=1.0">
		<title>GeoTagApp</title>
		<link rel='stylesheet' href='./stylesheets/style.css'/>
	</head>

	<body>

		<header>
			<img src="./images/location.png" width="100"
					alt="an image of a map and location">
			<h1>GeoTagApp</h1>
			<nav>
				<a href="#">About</a> | <a href="#">Help</a> | <a
					href="/">Home</a>
			</nav>
		</header>

		<main class="container row">
			<section class="tagging col-3">
				<h2>Tagging</h2>

				<!-- ############### Aufgabe1a Form1 Start -->
				<form id="tag-form" action="/tagging" method="post">
					<fieldset>
						<legend><h3> Enter your own Geotag </h3></legend>

						<label for="latitude">Latitude:</label>
						<input type="text" id="latitude" name="latitude" placeholder="0.00000" required>
						<label for="longitude">Longitude:</label>
						<input type="text" id="longitude" name="longitude" placeholder="0.00000" required>
						<label for="name">Name:</label>
						<input type="text" id="name" name="name" placeholder="max. 10 letters"
							   maxlength=10 required>
						<label for="hashtag">Hashtag:</label>
						<input type="text" id="hashtag" name="hashtag" placeholder="# + max. 10 letters"
							   pattern="^#[A-Za-z_äöüÄÖÜß]{1,10}$">
						<div class="buttonHolder">
							<input id="tag-submit" type="submit" value="Submit" >
						</div>
					</fieldset>
				<!-- ############### Aufgabe1a Form1 Ende -->
				</form>
			</section>

			<section class="discovery col-9">
				<div class="row">
					<h2>Discovery</h2>

					<!-- ############### Aufgabe1a Form2 Start -->

						<form id="filter-form" action="/discovery" method="post">
							<fieldset>
								<legend><h3>Filter by Searchterm</h3></legend>

								<label for="searchterm"></label>
								<input type="text" id="searchterm" name="searchterm" placeholder="search term" >
								<input type="submit" value="apply" >
								<input type="hidden" id="discovery-latitude" name="latitude" value="">
								<input type="hidden" id="discovery-longitude" name="longitude" value="">
							</fieldset>
						</form>
				</div>

				<!-- ############### Aufgabe1a Form2 Ende -->

				<div class="row container">
					<div class="taglist col-4">
						<ul id="results">
						<% if (taglist !== undefined) taglist.forEach(function(gtag) { %>
							<li><%= gtag.name %> ( <%= gtag.latitude %>,<%= gtag.longitude %>) <%= gtag.hashtag %> </li>
						<% }); %>
						</ul>
					</div>
					<div class="tagmap col-8">
						<img id="result-img" src="./images/mapview.jpg" alt="a map with locations"/>
						<div class="caption">Result map</div>
					</div>
				</div>
			</section>


		</main>

		<footer>

			<span>2017 by LKIT</span>

		</footer>

		<!-- Load JavaScripts
			================================================== -->
			<!-- Placed at the end of the document so the pages load faster -->
			<script src="https://ajax.googleapis.com/ajax/libs/jquery/2.2.4/jquery.min.js"></script>
			<script src="./javascripts/geotagging.js"></script>
	</body>
</html>